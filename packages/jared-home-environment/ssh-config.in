# vim: ft=sshconfig

Host *.local
  ForwardAgent yes
  ProxyCommand ipv6-link-local-ssh-proxy-command %h %p

Host *
  ForwardAgent no
  AddKeysToAgent no
  Compression no
  ServerAliveInterval 0
  ServerAliveCountMax 3
  HashKnownHosts no
  UserKnownHostsFile ~/.ssh/known_hosts
  ControlMaster auto
  ControlPath /run/user/%i/ssh-%C
  ControlPersist 30m

@extraConfig@
